<h1>Your tasks</h1>

<ol>
<% @tasks.each do |task| %>
<h3>Task name</h3>
<p> <%= task.name %></p>
<h3>Task done?</h3>
<p> <%= task.done %></p>

<p> <%= link_to "Edit", edit_task_path(task),
    data: { confirm: "Are you sure?" } %></p>

<p> <%= link_to "Delete", task_path(task),
    method: :delete,
    data: { confirm: "Are you sure?" } %></p>
<% end %>
</ol>

<p><%= link_to "New task", new_task_path,
    data: { confirm: "Create a new task?"} %></p>
